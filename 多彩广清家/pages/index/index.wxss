   display: flex; 
}

.grid-item {
  position: relative;
  flex: 1; 
  height: 218rpx; 
  margin: 0 8rpx; 
  border-radius: 4px; 
  overflow: hidden;
  border:30px solid #fff;
}

.grid-item text {
  position: absolute;
  bottom: 12%;
  left: 14%;
  font-size: 38rpx;
  font-weight: normal;
  color: #fff;
  z-index: 1;
}
